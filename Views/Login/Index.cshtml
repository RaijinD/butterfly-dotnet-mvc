@{
ViewData["Title"] = "Login";
}

@section scripts {
  <script type="text/javascript">
    $("#loginBtn").on("click", () => {
      const Name = $("#InputName").val();
      const Password = $("#InputPwd").val();
      const Email = $("#InputEmail").val();
      if(!Name || !Password || !Email ){
        alert("Empty Fields")
        return;
      }
      fetch("/login/login", {
        method: "POST",
        headers: {
          "Content-Type": "application/json"
        },
        body: JSON.stringify({ Name, Email, Password })
      }).then((e)=>{
        console.log(e.status)
      })
    })
  </script>
}

<div class="flex flex-col w-screen h-screen md:flex-row p-4 pt-3 pb-3">
  <div class="flex justify-center items-center w-full h-full bg-[#e1d4fa] rounded-tl-lg rounded-bl-lg md:w-3/5">
    <h2 class="text-white text-[150px]">Login</h2>
  </div>
  <div class="flex flex-col justify-items-center w-full h-full md:w-2/5">
    <form class="flex flex-col bg-[#b2a5d8] items-center justify-center h-full w-full rounded-tr-lg rounded-br-lg">
      <input id="InputEmail" class="mt-3 h-10 w-[80%] p-4 " type="text" name="email" placeholder="email">
      <input id ="InputName" class="mt-3 h-10 w-[80%] p-4" type="text" name="name" placeholder="name">
      <input id="InputPwd" class="mt-3 h-10 w-[80%] p-4" type="password" name="password" placeholder="password">
        <div class="flex flex-row w-2/3 mt-4 justify-between">
          <button class="p-2 rounded-md bg-[#bae1ff]" type="button" id="registerBtn">Dont Have a Account?</button>
          <button class="p-2 rounded-md bg-[#baffc9]" type="button" id="loginBtn">Login</button>
        </div>
    </form>
  </div>

</div>
